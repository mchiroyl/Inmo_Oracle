<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.inmo.ui.VendedoresController"
      spacing="12">

    <HBox spacing="8">
        <Label text="Vendedores" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="txtBuscar" promptText="Buscar por nombre/email/teléfono" />
        <Button text="Buscar" onAction="#onBuscar"/>
    </HBox>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="30"/>
        </columnConstraints>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTelefono" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Agente:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cmbAgente" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <CheckBox fx:id="chkActivo" text="Activo" selected="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="8">
        <Button text="Nuevo"   onAction="#onNuevo"/>
        <Button text="Guardar" onAction="#onGuardar"/>
        <Button text="Eliminar" onAction="#onEliminar"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblInfo" text=""/>
    </HBox>

    <TableView fx:id="tbl" prefHeight="360">
        <columns>
            <TableColumn fx:id="colId"      text="ID"        prefWidth="70"/>
            <TableColumn fx:id="colNombre"  text="Nombre"    prefWidth="180"/>
            <TableColumn fx:id="colEmail"   text="Email"     prefWidth="220"/>
            <TableColumn fx:id="colTel"     text="Teléfono"  prefWidth="120"/>
            <TableColumn fx:id="colAgente"  text="Agente"    prefWidth="180"/>
            <TableColumn fx:id="colActivo"  text="Activo"    prefWidth="80"/>
        </columns>
    </TableView>

    <padding>
        <Insets top="14" right="14" bottom="14" left="14"/>
    </padding>
</VBox>
